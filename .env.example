# PostgreSQL Database Settings (for Docker Compose)
POSTGRES_DB=User
POSTGRES_USER=tauser
POSTGRES_PASSWORD=tapass

# JWT Authentication
# Secret key for JWT token signing (use a strong, random string in production)
JWT_SECRET=your-super-secret-jwt-key-here

# Database Seeding
# Set to "1" to run database seeding on startup
# Set to "0" or leave empty to skip seeding
SEED=1

# Seed Users Configuration
# Path to the JSON file containing initial users to seed the database
# This file should contain an array of user objects with username, full_name, password, and status
# Default: ./backend/seed_users.json
SEED_USERS_FILE=./backend/seed_users.json

# CORS Configuration
# Comma-separated list of allowed origins for CORS
# Default: http://localhost:5173 (Vite dev server)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000


# Frontend Configuration
# Base URL for the API that the frontend will connect to
# Default: http://localhost:8000
VITE_API_BASE_URL=http://localhost:8000
